require 'rubygems'
require 'rake'
require 'echoe'
Echoe.new('js-bundler', '0.1.0') do |g|
  g.description    = "Bundler/compiler for js-files that resolves dependencies and can compile everything into one file, providing all the neccessary meta-info."
  g.url            = "http://github.com/markiz/js-bundler"
  g.author         = "Markiz, idea by Inviz (http://github.com/Inviz)"
  g.email          = "markizko@gmail.com"
  g.ignore_pattern = ["nbproject/**/*", 'spec/*/public/**/*']
  g.runtime_dependencies   = ["activesupport", "json_pure", "rgl"]
  g.development_dependencies = ["rake"]
end